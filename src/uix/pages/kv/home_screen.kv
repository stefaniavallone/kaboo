#:import ElementCard uix.components.element_card
#:import KMDIconSquaredButton uix.base_components.kmd_icon_squared_button
#:import KMDFlatButton uix.base_components.kmd_flat_button

<HomeScreen>
    FitImage:
        size_hint: None, None
        size: root.size
        source: "../assets/images/home_background2.png"
        opacity: 0.75

    MDBoxLayout:
        orientation: "vertical"
        MDRelativeLayout:
            id: logo_container
            size_hint_y: .25
            padding:dp(25)
            MDBoxLayout:
                orientation:"vertical"
                Image:
                    source: '../assets/images/logo.png'
                    keep_ratio: True
                    opacity: 1
                    size_hint_y: None
                    height: logo_container.height - dp(20)
                    pos_hint: {"center_x": .5, "center_y": .5}

        MDGridLayout:
            size_hint: .75, .75
            pos_hint: {"center_x": .5, "center_y": .5}
            cols:1
            padding:[dp(15),dp(15),dp(15),dp(35)]
            spacing:dp(15)
            ElementCard:
                md_bg_color: 210/255, 158/255, 0/255, 1
                image:"../assets/images/darts.png"
                text:"Easy"
                subtext:"play"
                items_count:"33 Cards"
                on_release: root.set_game_level("easy")

            ElementCard:
                md_bg_color: 205/255, 92/255, 0/255, 1
                image:"../assets/images/darts2.png"
                text:"Medium"
                subtext:"play"
                items_count:"45 Cards"
                on_release: root.set_game_level("medium")

            ElementCard:
                md_bg_color: 130/255, 95/255, 30/255, 1
                image: "../assets/images/darts3.png"
                text:"Hard"
                subtext:"play"
                items_count:"56 cards"
                on_release: root.set_game_level("hard")
          
        MDBoxLayout:
            spacing: "10dp"
            padding: [dp(10), dp(10), dp(10), dp(10)]
            adaptive_size: True
            pos_hint: {"center_x": .5, "center_y": .5}
            KMDIconSquaredButton:
                icon: "trophy"
                tooltip_text: "Trophy"
                #md_bg_color: 83.9/255, 37.6/255, 0/255, 1
                md_bg_color: 0.9, 0.9, 0.9, 1
                theme_text_color: "Custom"
                on_release:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'trophies'

            KMDIconSquaredButton:
                id: history
                icon: "book"
                tooltip_text: "History"
                #md_bg_color: 83.9/255, 37.6/255, 0/255, 1
                md_bg_color: 0.9, 0.9, 0.9, 1
                theme_text_color: "Custom"
                on_release:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'history'

            KMDIconSquaredButton:
                icon: "star"
                tooltip_text: "Star"
                pos_hint: {"center_x": .5, "center_y": .5}
                #md_bg_color: 83.9/255, 37.6/255, 0/255, 1
                md_bg_color: 0.9, 0.9, 0.9, 1
                theme_text_color: "Custom"
                on_release: root.show_rate_us_dialog()

            KMDIconSquaredButton:
                id: settings
                icon: "menu"
                tooltip_text: "Settings"
                #md_bg_color: 83.9/255, 37.6/255, 0/255, 1
                md_bg_color: 0.9, 0.9, 0.9, 1
                theme_text_color: "Custom"
                on_release:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'settings'