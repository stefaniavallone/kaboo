<HomeScreen>
    MDBoxLayout:
        orientation: "vertical"

        MDBoxLayout:
            size_hint_y:.25
            padding:dp(25)
            MDBoxLayout:
                orientation:"vertical"
                MDLabel:
                    text:"KTaboo"
                    font_style:"H4"
                MDBoxLayout:
                    adaptive_size:True
                    spacing:dp(10)
                    MDLabel:
                        text:"Home"
                        text_size:None,None
                        adaptive_width:True
                    MDIcon:
                        icon:'chevron-down'

            MDIconButton:
                icon:"assets/appicon.png"
        MDGridLayout:
            size_hint_y:.75
            cols:2
            padding:[dp(15),dp(15),dp(15),dp(35)]
            spacing:dp(15)
            ElementCard:
                md_bg_color:55/255,255/255,86/255,1
                image:"assets/images/darts.png"
                text:"Easy"
                subtext:"play"
                items_count:"33 Cards"

            ElementCard:
                md_bg_color:205/255,69/255,126/255,1
                image:"assets/images/darts2.png"
                text:"Medium"
                subtext:"play"
                items_count:"45 Cards"

            ElementCard:
                md_bg_color:69/255,55/255,255/255,1
                image:"assets/images/darts3.png"
                text:"Hard"
                subtext:"play"
                items_count:"56 cards"

        MDBoxLayout:
            size_hint_y:.10
            padding_y:dp(15)
            spacing:dp(15)
            orientation:"horizontal"
            md_bg_color:55/255,155/255,155/255,1

            MDIconButton:
                icon: "trophy"
                user_font_size: "48sp"
                padding:dp(5)
            MDIconButton:
                icon: "book-open-outline"
                user_font_size: "48sp"
                padding:dp(5)
            MDIconButton:
                icon: "star"
                user_font_size: "48sp"
                padding:dp(5)
            MDIconButton:
                icon: "menu"
                user_font_size: "48sp"
                padding:dp(5)








<ElementCard@MDCard>:
    md_bg_color:69/255,55/255,86/255,1
    padding:dp(15)
    spacing:dp(15)
    radius:dp(25)
    ripple_behavior: True
    image:''
    text:""
    items_count:""
    subtext:''

    orientation:'vertical'
    Image:
        source:root.image
    MDBoxLayout:
        orientation:'vertical'
        MDLabel:
            halign:"center"
            text:root.text
            font_style:"H6"
        MDLabel:
            halign:"center"
            font_style:"Caption"
            text:root.subtext
        MDLabel:
            halign:"center"
            text:root.items_count
