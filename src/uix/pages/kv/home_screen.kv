#:import ElementCard uix.components.element_card
#:import KMDIconSquaredButton uix.base_components.kmd_icon_squared_button
#:import KMDFlatButton uix.base_components.kmd_flat_button

<HomeScreen>
    FitImage:
        size_hint: None, None
        size: root.size
        source: "assets/images/home/home_background.png"
        #opacity: 0.75

    MDBoxLayout:
        orientation: "vertical"
        MDRelativeLayout:
            id: logo_container
            size_hint_y: .25
            padding: dp(25)
            MDBoxLayout:
                orientation:"vertical"
                Image:
                    source: 'assets/images/home/logo.png'
                    keep_ratio: True
                    opacity: 1
                    size_hint_y: None
                    height: logo_container.height - dp(20)
                    pos_hint: {"center_x": .5, "center_y": .5}

        MDGridLayout:
            size_hint: .75, .75
            pos_hint: {"center_x": .5, "center_y": .5}
            cols:1
            padding:[dp(15),dp(15),dp(15),dp(35)]
            spacing:dp(15)
            ElementCard:
                md_bg_color: 210/255, 158/255, 0/255, 1
                image:"assets/images/home/darts_easy.png"
                text:"Easy"
                subtext:"play"
                items_count:"33 Cards"
                on_release: root.set_game_level("easy")

            ElementCard:
                md_bg_color: 205/255, 92/255, 0/255, 1
                image:"assets/images/home/darts_medium.png"
                text:"Medium"
                subtext:"play"
                items_count:"45 Cards"
                on_release: root.set_game_level("medium")

            ElementCard:
                md_bg_color: 130/255, 95/255, 30/255, 1
                image: "assets/images/home/darts_hard.png"
                text:"Hard"
                subtext:"play"
                items_count:"56 cards"
                on_release: root.set_game_level("hard")
          
        MDBoxLayout:
            spacing: "10dp"
            padding: [dp(10), dp(10), dp(10), dp(10)]
            adaptive_size: True
            pos_hint: {"center_x": .5, "center_y": .5}
            KMDIconSquaredButton:
                icon: "assets/images/icons/trophy.png"  #"trophy"
                tooltip_text: "Trophy"
                #md_bg_color: 210/255, 158/255, 0/255, 1
                md_bg_color: 0.9, 0.9, 0.9, 1
                theme_text_color: "Custom"
                on_release:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'trophies'

            KMDIconSquaredButton:
                id: history
                icon: "assets/images/icons/to-do-list.png"  #"book"
                tooltip_text: "History"
                #md_bg_color: 210/255, 158/255, 0/255, 1
                md_bg_color: 0.9, 0.9, 0.9, 1
                theme_text_color: "Custom"
                on_release:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'history'

            KMDIconSquaredButton:
                icon: "assets/images/icons/value.png"  #"Star"
                tooltip_text: "History"
                pos_hint: {"center_x": .5, "center_y": .5}
                md_bg_color: 150/255, 128/255, 100/255, 1
                #md_bg_color: 0.9, 0.9, 0.9, 1
                theme_text_color: "Custom"
                on_release: root.show_rate_us_dialog()

            KMDIconSquaredButton:
                id: settings
                icon: "assets/images/icons/list.png"  #"menu"
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                tooltip_text: "Settings"
                md_bg_color: 210/255, 158/255, 0/255, 1
                #md_bg_color: 0.9, 0.9, 0.9, 1
                theme_text_color: "Custom"
                on_release:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'settings'