#:import ElementCard uix.components.element_card
#:import TooltipMDIconButton uix.components.tooltip_MDIcon_button
<HomeScreen>
    MDBoxLayout:
        orientation: "vertical"

        MDBoxLayout:
            size_hint_y: .25
            pos_hint: {"center_x": .5, "center_y": .5}
            padding:dp(25)
            MDBoxLayout:
                orientation:"vertical"
                MDLabel:
                    text:"KTaboo"
                    font_style:"H4"
                    halign: "center"

        MDGridLayout:
            size_hint: .75, .75
            pos_hint: {"center_x": .5, "center_y": .5}
            cols:1
            padding:[dp(15),dp(15),dp(15),dp(35)]
            spacing:dp(15)
            ElementCard:
                md_bg_color:55/255,255/255,86/255,1
                image:"../assets/images/darts.png"
                text:"Easy"
                subtext:"play"
                items_count:"33 Cards"
                on_release: root.set_game_level("easy")

            ElementCard:
                md_bg_color:255/255,69/255,86/255,1
                image:"../assets/images/darts2.png"
                text:"Medium"
                subtext:"play"
                items_count:"45 Cards"
                on_release: root.set_game_level("medium")

            ElementCard:
                md_bg_color:69/255,55/255,255/255,1
                image:"../assets/images/darts3.png"
                text:"Hard"
                subtext:"play"
                items_count:"56 cards"
                on_release: root.set_game_level("hard")
          
        MDBoxLayout:
            spacing: "10dp"
            padding: [dp(10), dp(10), dp(10), dp(10)]
            adaptive_size: True
            pos_hint: {"center_x": .5, "center_y": .5}
            TooltipMDIconButton:
                icon: "trophy"
                tooltip_text: "Trophy"
                md_bg_color: app.theme_cls.primary_color
                theme_text_color: "Custom"
                on_release:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'trophies'

            TooltipMDIconButton:
                id: history
                icon: "book"
                tooltip_text: "History"
                md_bg_color: app.theme_cls.primary_color
                theme_text_color: "Custom"
                on_release:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'history'

            TooltipMDIconButton:
                icon: "star"
                tooltip_text: "Star"
                pos_hint: {"center_x": .5, "center_y": .5}
                md_bg_color: app.theme_cls.primary_color
                theme_text_color: "Custom"
                on_release: root.show_rate_us_dialog()

            TooltipMDIconButton:
                id: settings
                icon: "menu"
                tooltip_text: "Settings"
                md_bg_color: app.theme_cls.primary_color
                theme_text_color: "Custom"
                on_release:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'settings'