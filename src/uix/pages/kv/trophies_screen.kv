#:import StoryCard uix.components.story_card
#:import StoryCard uix.components.page
<Row@RecycleKVIDsDataViewBehavior+BoxLayout>:
    name: ''
    value: ''
    icon: ''
    MDIcon:
        icon: root.icon
    Label:
        text: root.name
    Label:
        text: root.value
    MDCheckbox:
        size_hint: None, None
        size: "48dp", "48dp"
        pos_hint: {'center_x': .5, 'center_y': .5}
        disabled: True

<TrophiesScreen>
    MDRelativeLayout:
        rv: rv
        Page:
            text: "TROPHIES"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            size_hint_y: 0.9
            size_hint_x: None
            width: self.parent.width * 0.8
            avatar: "../assets/images/darts.png"
            story: "../assets/images/story.png"
            callback: root.to_home
                
            RecycleView:
                id: rv
                scroll_type: ['bars', 'content']
                scroll_wheel_distance: dp(50)
                bar_width: dp(10)
                viewclass: 'Row'
                RecycleBoxLayout:
                    padding: "30dp", "45dp", "15dp", "20dp"
                    default_size: None, dp(30)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    # add this so you can scroll
                    row_default_height: 100
                    orientation: 'vertical'
