#:import StoryCard uix.components.story_card
#:import StoryCard uix.components.page
#:import ListItemWithCheckbox uix.components.list_item_checkbox

<ListItemWithCheckbox@RecycleKVIDsDataViewBehavior+MDBoxLayout>:
    name: ''
    image: ''
    description: ''
    text: root.name
    secondary_text: root.description
    image: root.image
    obtained: root.obtained
    size_hint_y: None

<TrophiesScreen>
    MDRelativeLayout:
        md_bg_color: 1,1,1,1
        Page:
            text: "TROPHIES"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            size_hint_y: 0.9
            size_hint_x: None
            width: self.parent.width * 0.8
            avatar: "../assets/images/darts.png"
            story: "../assets/images/story.png"
            callback: root.to_home
            icon: "trophy"    
            RecycleView:
                id: list_trophies
                scroll_type: ['bars']
                scroll_wheel_distance: dp(10)
                bar_width: dp(5)
                viewclass: 'ListItemWithCheckbox'
                RecycleBoxLayout:
                    default_size: None, dp(50)
                    default_size_hint: 1, None
                    size_hint_y: None
                    spacing: dp(10)
                    height: self.minimum_height + 80
                    # add this so you can scroll
                    row_default_height: 300
                    orientation: 'vertical'
