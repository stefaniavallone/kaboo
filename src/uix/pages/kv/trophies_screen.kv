#:import StoryCard uix.components.page
#:import ListItemWithCheckbox uix.base_components.list_item_with_checkbox


<TrophiesScreen>

    FitImage:
        size_hint: None, None
        size: root.size
        source: "assets/images/background.png"
        allow_stretch: True

    MDRelativeLayout:
        Page:
            text: app.i18n._("SECTION_TROPHIES")  # "TROPHIES"
            pos_hint: {"center_x": 0.5, "center_y": 0.485}
            size_hint_y: 0.9
            size_hint_x: None
            width: self.parent.width * 0.8
            label_bg_color: 219/255, 164/255, 24/255, 1
            callback: root.to_home
            icon: "trophy"

            BoxLayout:
                size_hint_y: None
                height: root.height * 0.85
                RecycleView:
                    id: list_trophies
                    viewclass: 'ListItemWithCheckbox'
                    scroll_type: ['bars', 'content']
                    scroll_wheel_distance: dp(30)
                    bar_width: dp(5)
                    RecycleBoxLayout:
                        default_size: None, dp(70)
                        default_size_hint: 1, None
                        size_hint_y: None
                        height: self.minimum_height
                        #row_default_height: 300 # add this so you can scroll
                        orientation: 'vertical'
