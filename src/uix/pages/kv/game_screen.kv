<GameScreen>
    MDBoxLayout:
        orientation: "vertical"

        MDBoxLayout:
            size_hint_y:.10
            padding:dp(10)
            orientation: "horizontal"

            MDBoxLayout:
                id: info

        MDBoxLayout:
            orientation: "vertical"
            MDBoxLayout:
                id: container
                text:""
                subtext:""

    MDBoxLayout:
        orientation: "vertical"
        size_hint: .75, .75
        pos_hint: {"center_x": .5, "center_y": .5}
        MDBoxLayout:
            id: restart_game
            text:""
            subtext:""

    MDBoxLayout:
        orientation: "vertical"
        size_hint: .75, .75
        pos_hint: {"center_x": .5, "center_y": .5}
        MDBoxLayout:
            id: end_game
            text:""
            subtext:""

