#:import StoryCard uix.components.story_card
#:import StoryCard uix.components.page
<SettingsScreen>
    MDRelativeLayout:
    
        Page:
            text: "SETTINGS"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            size_hint_y: 0.9
            size_hint_x: None
            width: self.parent.width * 0.8
            avatar: "../assets/images/darts.png"
            story: "../assets/images/story.png"
            callback: root.to_home
            MDGridLayout:
                id: settings
                cols:2
                padding:[dp(15),dp(30),dp(15),dp(35)]
                size: root.width * 0.8, root.height * 0.8
                row_default_height: 50
                row_force_default: True
                MDLabel:
                    text: "Sounds"
                MDSwitch:
                    widget_style: "ios"
                    active: root.sounds_on
                    on_active: root.toggle_sounds()
                MDLabel:
                    text: "Enable Dark Theme"
                MDSwitch:
                    widget_style: "ios"
                    active: root.theme_dark_on
                    on_active: root.toggle_dark_theme(app)

