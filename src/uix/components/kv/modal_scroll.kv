#:import KMDCard uix.base_components.kmd_card
#:import KMDIconButton uix.base_components.kmd_icon_button

<ModalScroll>
    item_list: item_list
    orientation: "vertical"
    KMDCard:
        id: card
        radius: dp(32)
        elevation: 18
        padding: dp(15)
        #spacing: dp(15)

        MDBoxLayout:
            id: container
            padding: [dp(10), dp(10), dp(10), dp(10)]
            orientation: 'vertical'
            MDBoxLayout:
                orientation: 'vertical'
                MDLabel:
                    size_hint_y: 0.25
                    halign: "center"
                    text: root.text
                    font_style: "H6"
                ScrollView:
                    MDList:
                        id: item_list

    KMDCard:
        id: close_button
        elevation: 0
        x: card.width - dp(40) - self.width / 2
        y: card.height - self.height / 2
        size_hint: None, None
        size: 48, 48
        radius: dp(24)
        KMDIconButton:
            icon: "close"
            icon_color: "#ffffff"
            md_bg_color: 0.9, 0.1, 0.1, 1
            _radius: dp(24)