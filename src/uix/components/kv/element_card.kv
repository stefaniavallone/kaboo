<ElementCard@KMDCard>:
    padding: dp(15)
    spacing: dp(15)
    radius: dp(25)
    ripple_behavior: True
    image:''
    text:""
    items_count:""
    subtext:''
    md_bg_color:69/255,55/255,86/255,1
    orientation:'vertical'
    Image:
        source: root.image
    MDBoxLayout:
        orientation:'vertical'
        MDLabel:
            halign:"center"
            text:root.text
            font_style:"H6"
        MDLabel:
            halign:"center"
            font_style:"Caption"
            text:root.subtext
        MDLabel:
            halign:"center"
            text:root.items_count