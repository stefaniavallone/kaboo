#:import ButtonGroup uix.components.button_group

<GameSettingsContainer>:
    source: ""
    text: ""
    title: ""

    MDBoxLayout:
        orientation: "vertical"
        padding: dp(25)
        Image:
            source: root.source
            pos_hint: {"center_x": .5, "center_y": 0.75}
            size_hint: .8, .5
            keep_ratio: True

        MDBoxLayout:
            pos_hint: {"center_x": .5, "y": .5}
            orientation: "vertical"
            adaptive_height: True
            size_hint:  0.7, .5
            canvas.before:
                RoundedRectangle:
                    pos: self.pos
                    size: self.size

            MDLabel:
                text: root.title
                bold: True
                size_hint_y: 0.2
                height: self.texture_size[1]
                font_style: "H6"
                halign: "center"
                valign: "center"

            MDLabel:
                height: self.texture_size[1]
                font_style: "Body1"
                halign: "center"
                valign: "center"
                text: root.text

        MDGridLayout:
            id: buttons_container
            pos_hint: {"center_x": .5, "center_y": .15}
            cols:2
            padding: dp(10)
            spacing: dp(10)
            row_default_height: dp(50)
            row_force_default: True
            size_hint_y: None
            adaptive_size: True
            height: self.minimum_height
