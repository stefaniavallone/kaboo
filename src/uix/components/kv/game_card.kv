<GameCard>:

    MDBoxLayout:
        size_hint: .5, .50
        radius:dp(25)
        ripple_behavior: False
        text:""
        subtext:''
        padding:dp(15)
        md_bg_color:55/255,255/255,86/255,1
        orientation:'vertical'
        pos_hint: {"center_x": .5, "center_y": .5}
        MDBoxLayout:
            orientation:'vertical'
            spacing:dp(15)
            MDLabel:
                halign:"center"
                text:root.text
                font_style:"H6"
            MDLabel:
                halign:"center"
                font_style:"Caption"
                text:root.subtext

        MDGridLayout:
            size_hint_y: .50
            cols:3
            spacing:dp(15)
            pos_hint: {"center_x": .8, "center_y": .5}
            MDIconButton:
                #action1 should fire for this button
                id: wrong_answer
                icon: "close-thick"


            MDIconButton:
                #action2 should fire for this button
                id:jump_answer
                icon: "arrow-u-down-right"

            MDIconButton:
                #action3 should fire for this button
                id: ok_answer
                icon: "check-bold"


