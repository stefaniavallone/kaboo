#:import ButtonGroup uix.components.button_group
#:import KMDFillRoundFlatButton uix.base_components.kmd_fill_round_flat_button

<OnboardingItem>:
    source: ""
    text: ""
    title: ""
    text_button_one: ""
    text_button_two: ""
    text_button_three: ""
    text_button_four: ""
    group_name: ""
    id: boarding

    MDBoxLayout:
        orientation: "vertical"
        padding: dp(25)
        Image:
            source: root.source
            pos_hint: {"center_x": .5, "center_y": 0.75}
            size_hint: .8, .5
            keep_ratio: True

        MDBoxLayout:
            pos_hint: {"center_x": .5, "y": .5}
            orientation: "vertical"
            adaptive_height: True
            size_hint:  0.7, .5
            canvas.before:
                RoundedRectangle:
                    pos: self.pos
                    size: self.size

            MDLabel:
                text: root.title
                bold: True
                size_hint_y: 0.2
                height: self.texture_size[1]
                font_style: "H6"
                halign: "center"
                valign: "center"

            MDLabel:
                height: self.texture_size[1]
                font_style: "Body1"
                halign: "center"
                valign: "center"
                text: root.text

        MDGridLayout:
            id: text_box_button
            pos_hint: {"center_x": .5, "center_y": .15}
            cols:2
            padding: dp(10)
            spacing: dp(10)
            row_default_height: dp(50)
            row_force_default: True
            size_hint_y: None
            adaptive_size: True
            height: self.minimum_height
            KMDFillRoundFlatButton:
                text: root.text_button_one
                theme_text_color: "Custom"
                radius: [dp(10), dp(10), dp(10), dp(10)]
                on_release: root.callback(root.text_button_one)
                size_hint: None, None
                width: root.width * 0.3
            KMDFillRoundFlatButton:
                text: root.text_button_two
                theme_text_color: "Custom"
                radius: [dp(10), dp(10), dp(10), dp(10)]
                on_release: root.callback(root.text_button_two)
                size_hint: None, None
                width: root.width * 0.3
            KMDFillRoundFlatButton:
                text: root.text_button_three
                theme_text_color: "Custom"
                radius: [dp(10), dp(10), dp(10), dp(10)]
                on_release: root.callback(root.text_button_three)
                size_hint: None, None
                width: root.width * 0.3
            KMDFillRoundFlatButton:
                text: root.text_button_four
                theme_text_color: "Custom"
                radius: [dp(10), dp(10), dp(10), dp(10)]
                on_release: root.callback(root.text_button_four)
                size_hint: None, None
                width: root.width * 0.3