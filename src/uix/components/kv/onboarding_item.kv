#:import ButtonGroup uix.components.button_group
#:import KMDFillRoundFlatButton uix.base_components.kmd_fill_round_flat_button

<OnboardingItem>:
    source: ""
    text: ""
    title: ""
    text_button_one: ""
    text_button_two: ""
    text_button_three: ""
    group_name: ""
    id: boarding

    MDRelativeLayout:
        Image:
            source: root.source
            pos_hint: {"center_x": .5, "y": .6}
            size_hint: .4, .3

        MDBoxLayout:
            pos_hint: {"center_x": .5, "y": .4}
            orientation: "vertical"
            padding: dp(10)
            adaptive_height: True
            spacing: dp(20)
            size_hint_x: .7
            canvas.before:
                RoundedRectangle:
                    pos: self.pos
                    size: self.size

            MDLabel:
                text: root.title
                bold: True
                size_hint_y: None
                height: self.texture_size[1]
                font_style: "H6"
                halign: "center"
                valign: "center"

            MDLabel:
                size_hint_y: None
                height: self.texture_size[1]
                font_style: "Body1"
                halign: "center"
                valign: "center"
                text: root.text

        MDGridLayout:
            id: text_box_button
            cols: 2
            adaptive_size: True
            pos_hint: {"center_x": .5, "y": .2}
            spacing: dp(10)

            KMDFillRoundFlatButton:
                text: root.text_button_one
                group: root.group_name
                theme_text_color: "Custom"
                on_release: root.callback(root.text_button_one)
            KMDFillRoundFlatButton:
                text: root.text_button_two
                group: root.group_name
                theme_text_color: "Custom"
                on_release: root.callback(root.text_button_two)
            KMDFillRoundFlatButton:
                text: root.text_button_three
                group: root.group_name
                theme_text_color: "Custom"
                on_release: root.callback(root.text_button_three)
            KMDFillRoundFlatButton:
                text: root.text_button_one
                group: root.group_name
                theme_text_color: "Custom"
                on_release: root.callback(root.text_button_one)


