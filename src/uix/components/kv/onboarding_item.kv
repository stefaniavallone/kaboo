#:import ButtonGroup uix.components.button_group
#:import KMDFillRoundFlatButton uix.base_components.kmd_fill_round_flat_button

<OnboardingItem>:
    source: ""
    text: ""
    title: ""
    text_button_one: ""
    text_button_two: ""
    text_button_three: ""
    text_button_four: ""
    group_name: ""
    id: boarding

    MDRelativeLayout:
        orientation: "vertical"
        padding: dp(25)
        Image:
            source: root.source
            pos_hint: {"center_x": .5, "center_y": .75}
            size_hint: .8, .8
            keep_ratio: True

        MDBoxLayout:
            pos_hint: {"center_x": .5, "center_y": .4}
            orientation: "vertical"
            padding: dp(10)
            adaptive_height: True
            spacing: dp(20)
            size_hint_x: .7
            canvas.before:
                RoundedRectangle:
                    pos: self.pos
                    size: self.size

            MDLabel:
                text: root.title
                bold: True
                size_hint_y: None
                height: self.texture_size[1]
                font_style: "H6"
                halign: "center"
                valign: "center"

            MDLabel:
                size_hint_y: None
                height: self.texture_size[1]
                font_style: "Body1"
                halign: "center"
                valign: "center"
                text: root.text

        MDGridLayout:
            id: text_box_button
            cols: 2
            adaptive_size: True
            pos_hint: {"center_x": .5, "center_y": .15}
            spacing: dp(10)

            KMDFillRoundFlatButton:
                text: root.text_button_one
                theme_text_color: "Custom"
                radius: [dp(10), dp(10), dp(10), dp(10)]
                on_release: root.callback(root.text_button_one)
                size_hint: None, None
                width: root.width * 0.3
            KMDFillRoundFlatButton:
                text: root.text_button_two
                theme_text_color: "Custom"
                radius: [dp(10), dp(10), dp(10), dp(10)]
                on_release: root.callback(root.text_button_two)
                size_hint: None, None
                width: root.width * 0.3
            KMDFillRoundFlatButton:
                text: root.text_button_three
                theme_text_color: "Custom"
                radius: [dp(10), dp(10), dp(10), dp(10)]
                on_release: root.callback(root.text_button_three)
                size_hint: None, None
                width: root.width * 0.3
            KMDFillRoundFlatButton:
                text: root.text_button_four
                theme_text_color: "Custom"
                radius: [dp(10), dp(10), dp(10), dp(10)]
                on_release: root.callback(root.text_button_four)
                size_hint: None, None
                width: root.width * 0.3