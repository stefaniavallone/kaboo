<SWCard>:
    text: "WORD"
    forbidden: "forbidden1\nforbidden2\nforbidden3\nforbidden4"
    MDBoxLayout:
        padding: [dp(0), dp(20), dp(0), dp(20)] 
        MDCard:
            radius: [dp(25),]
            MDBoxLayout:
                orientation:'vertical'
                spacing: dp(15)
                MDLabel:
                    id: word 
                    text: root.text
                    halign: "center"
                    bold: True
                    font_style: "H5"
                MDLabel:
                    id: forbidden
                    halign:"center"
                    text: root.forbidden
                    font_style: "Body1"
                