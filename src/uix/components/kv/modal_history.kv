#:import KMDCard uix.base_components.kmd_card
#:import KMDIconButton uix.base_components.kmd_icon_button

<ModalHistory>:
    text: ''
    subtext: ''
    bg_color: 1,1,1,1

    KMDCard:
        id: card
        radius: 32
        elevation: 18
        padding: dp(15)
        #spacing: dp(15)
        md_bg_color: 1,1,1,1

        MDBoxLayout:
            id: container
            padding: [dp(10), dp(30), dp(10), dp(30)]
            orientation: 'vertical'
            MDBoxLayout:
                orientation: 'vertical'
                ScrollView:
                    do_scroll_x: True
                    MDList:
                        TwoLineListItem:
                            text: root.text_date
                            secondary_text: root.subtext_date
                        TwoLineListItem:
                            text: root.text_player
                            secondary_text: root.subtext_player
                        # TwoLineListItem:
                        #     text: root.text_player1
                        #     secondary_text: root.subtext_player2
                        # TwoLineListItem:
                        #     text: root.text_wrong
                        #     secondary_text: root.subtext_wrong
                        # TwoLineListItem:
                        #     text: root.text_winner
                        #     secondary_text: root.subtext_winner

    KMDCard:
        id: close_button
        elevation: 0
        x: card.width*0.85 - self.width / 2
        y: card.height - self.height / 2
        size_hint: None, None
        size: 48, 48
        radius: 24
        KMDIconButton:
            icon: "close"
            icon_color: "#ffffff"
            md_bg_color: 0.9,0.1,0.1,1