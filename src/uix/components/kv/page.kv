<Page>
    size_hint_y: 0.8

    MDCard:
        id: card
        size_hint: 1, 1
        #size: "188dp", "252dp"
        radius: 32
        elevation: 18
        FitImage:
            source: root.story
            radius: [32, ]
            mipmap: True
            opacity: 0.5


    MDCard:
        id: label
        size_hint: None, None
        height: "56dp"
        width: card.width * 0.8
        radius: 28
        x: card.width / 2 - self.width / 2
        y: card.height - self.height / 2
        elevation: 18
        MDIconButton:
            icon: "chevron-left"
            theme_text_color: "Custom"
            pos_hint: {'right': .20, 'center_y': .5}
            on_release: root.callback()
                
        MDLabel:
            text: root.text
            halign: "center"
            
        FitImage:
            source: root.avatar
            radius: [36, 36, 0, 0, ]
            mipmap: True

    # FitImage:
    #     size_hint: None, None
    #     size: "188dp", "112dp"
    #     source: "../assets/images/black-shadow.png"
    #     radius: [8, 8, 28, 28]
    #     mipmap: True
    
    MDLabel: 
        text: root.name
        adaptive_size: True
        theme_text_color: "Custom"
        text_color: 1, 1, 1, 1
        #font_name: "../assets/font/SourceSansPro-Bold.otf"
        x: card.width / 2 - self.width / 2
        y: "12dp"
