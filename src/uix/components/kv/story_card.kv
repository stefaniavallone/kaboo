<StoryCard>
    #size_hint: None, None
    #size: "228dp", "288dp"

    MDCard:
        id: card
        #size_hint: None, None
        #size: "188dp", "252dp"
        radius: dp(32)
        elevation: 18
        FitImage:
            source: root.story
            radius: [dp(32), ]
            mipmap: True
    
    MDCard:
        id: avatar
        size_hint: None, None
        size: "56dp", "56dp"
        radius: dp(28)
        x: card.width / 2 - self.width / 2
        y: card.height - self.height / 2
        elevation: 18
        FitImage:
            source: root.avatar
            radius: [dp(28), ]
            mipmap: True

    FitImage:
        size_hint: None, None
        size: "188dp", "112dp"
        source: "assets/images/black-shadow.png"
        radius: [dp(8), dp(8), dp(28), dp(28)]
        mipmap: True
    
    MDLabel: 
        text: root.name
        adaptive_size: True
        theme_text_color: "Custom"
        text_color: 1, 1, 1, 1
        #font_name: "assets/font/SourceSansPro-Bold.otf"
        x: card.width / 2 - self.width / 2
        y: "12dp"
