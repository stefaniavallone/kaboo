#:import KMDCard uix.base_components.kmd_card
#:import TrophyContent uix.components.trophy_content
#:import KMDIconButton uix.base_components.kmd_icon_button

<KModalView>:
    MDRelativeLayout:
        id: container
        KMDCard:
            id: content_container
            radius: dp(32)
            elevation: 18
            padding: dp(15)

        MDBoxLayout:
            id: buttons_container
            orientation: 'horizontal'
            spacing: dp(5)
            x: content_container.width / 2 - self.width / 2
            y: -self.height / 2
            size_hint_x: None
            width: root.width*0.8
            adaptive_size: True

        KMDCard:
            id: close_button
            elevation: 0
            x: content_container.width - dp(40) - self.width / 2
            y: content_container.height - self.height / 2
            size_hint: None, None
            size: 48, 48
            radius: dp(24)
            on_release: root.dismiss()
            KMDIconButton:
                icon: "close"
                _radius: dp(24)
                icon_color: "#ffffff"
                md_bg_color: 0.9, 0.1, 0.1, 1









